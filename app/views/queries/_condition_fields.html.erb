<div class="condition" style="display:none">
	<fieldset class="buildYourQuery">
	 	<legend>Condition</legend>
			
		<div class="dropHere columnAcceptor"  class="columnAcceptor"> <p>column</p> </div>
		<div class="dropHere operatorAcceptor" class="operatorAcceptor"> <p>op.</p> </div>
		<div><%= form.hidden_field :column, :class => 'column' %></div>
		<div><%= form.hidden_field :operator_id, :class => 'operator' %></div>
		<div><%= form.text_field :parameter %></div>
	</fieldset>
			
	<fieldset class="extendYourQuery">		
		<div class="dropHere preDrop complexOperatorAcceptor">
			<legend>extend</legend>
		</div>
		<div><%= form.hidden_field :complexOperator, :class => 'complexOperator' %></div>
	</fieldset>
</div> 